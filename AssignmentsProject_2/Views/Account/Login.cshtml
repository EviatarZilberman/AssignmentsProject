@model User
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="center" id="title">
    <div class="center-in">
        <h1 class="text-center">@ViewData["Title"]</h1>

        <div class="text-danger" asp-validation-summary="All"></div>
    </div>
    <div style="margin-top: 50px; margin-bottom: 150px;">

        @if (ViewBag.Message != null)
        {
            <div class="p-1 mb-2 bg-danger text-white">@ViewBag.Message</div>
        }
        <form method="post">
            <div class="form-group">
                <label>Email</label>
                <input name="email" class="form-control" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input name="password" class="form-control" type="password" />
            </div>
            <div class="form-group">
                <label>
                    Keep me logged In
                    <input name="KeepLoggedIn" asp-for="KeepLoggedIn" type="checkbox" />
                </label>
            </div>
            <div id="_btn">
                <button class="btn btn-dark" type="submit" id="btn1">Log In</button>
            </div>
        </form>
    </div>
</div>