@model User;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout1.cshtml";
    //Layout = null;

}

<h1 class="bg-info text-white">Login</h1>
<div class="text-danger" asp-validation-summary="All"></div>

@if (ViewBag.Message != null)
{
    <div class="p-1 mb-2 bg-danger text-white">@ViewBag.Message</div>
}
<form method="post">
    <div class="form-group">
        <label>Email</label>
        <input name="email" class="form-control"/>
    </div>
        <div class="form-group">
            <label>Password</label>
        <input name="password" class="form-control" type="password" />
        </div>
    <div class="form-group">
        <label>
            Keep me logged In 
            <input name="KeepLoggedIn" asp-for="KeepLoggedIn" type="checkbox" />
        </label>
        </div>
        <br />
        <button class="btn btn-primary" type="submit" id="btn1">Log In</button>
</form>